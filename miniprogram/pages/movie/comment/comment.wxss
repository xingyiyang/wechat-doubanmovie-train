/* pages/movie/comment/comment.wxss */
.detail-container{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1; 
}

.detail-info{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  height: 400rpx;
  width: 100%;
  padding: 20rpx;
}

.detail-img{
  width: 280rpx;
  height: 90%;
  margin-right: 20rpx;
}

.detail{
  flex-grow: 1;
  line-height: 60rpx;
}

.detail view{
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-nm{
  font-size: 40rpx;
  font-weight: 700;
}

.detail .detail-sc{
  color: #fc3;
  font-size: 36rpx;
  font-weight: 700;
}

.desc{
  padding: 20rpx;
  color: #555;
  font-size: 24rpx;
}

.content-img{
  width: 200rpx;
  height: 200rpx;
  margin:10rpx; 
}